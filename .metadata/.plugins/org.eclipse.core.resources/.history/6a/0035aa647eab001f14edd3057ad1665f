#ifndef INC_AO_H_
#define INC_AO_H_

/*
 * Estructura de AO:
 * 1) callback para ejecutar al recibir un mensaje
 * 2) queue para recibir mensajes
 *
 * Estructura de mensaje:
 * 1) estructura de dato con parametros internos (cambia acorde al problema/contexto del momento)
 * 2) callback para ejecutar en la tarea que recibe el mensaje
 * 3) objeto activo target
 */
#endif /* INC_AO_H_ */
